@using System.Activities.Statements
@using SwcLmsMastery.Models.DBModels
@using SwcLmsMastery.Repositories
@model SwcLmsMastery.Models.LmsUserViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@{
    ViewBag.Title = "UserDetails";
}*@

<h3 style ="color: red">User Details</h3>
@using (Html.BeginForm("SaveUserDetails", "Manage", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <h1>@ViewBag.Message</h1>
    <div class="row">
    <div class="col-md-4">
        <div class="well">
            @Html.HiddenFor(m => m.UserId, Model.UserId)
            <div class="form-group">
                @Html.Label("First Name", new {title = "First Name", @class = "control-label"})
                @Html.TextBoxFor(m => m.FirstName, Model.FirstName, new {title = "First Name", @class = "form-control"})
            </div>

            <div class="form-group">
                @Html.Label("Last Name", new {title = "Last Name", @class = "control-label"})
                @Html.TextBoxFor(m => m.LastName, Model.LastName, new {title = "Last Name", @class = "form-control"})
            </div>
            <div class="form-group">
                @Html.Label("Grade Level", new {title = "Grade Level", @class = "control-label"})
                <br/>
                @Html.DropDownListFor(m => m.GradeLevelId, TheOneRepo.GetGradeLevels)
            </div>
            <div class="form-group">
                &nbsp;@Html.Label("Roles", new {title = "Roles", @class = "control-label"})
                <br/>
                &nbsp;&nbsp;@Html.CheckBox("Admin") @Html.Label("Administrator")
                <br/>
                &nbsp;&nbsp;@Html.CheckBox("Student") @Html.Label("Student")
                <br/>
                &nbsp;&nbsp;@Html.CheckBox("Teacher") @Html.Label("Teacher")
                <br/>
                &nbsp;&nbsp;@Html.CheckBox("Parent") @Html.Label("Parent")
                <br/>
                <br/>
                <div class="form-group">
                    &nbsp;&nbsp;&nbsp;@Html.Label("Login Approved: ", new {title = "Login Approved", @class = "control-label"})
                    &nbsp;&nbsp;@Html.CheckBox("IsApproved")
                    <br/>
                    &nbsp;&nbsp;&nbsp;@Html.Label("Locked Out: ", new { title = "Locked Out", @class = "control-label" })
                    &nbsp;<input type="submit" class="btn btn-default" value="Unlock" title="Click to Unlock" />
                    <br/>
                    <br/>
                    <br/>
                    <div>
                        &nbsp;&nbsp;<input type="button" class="btn btn-default" value="Cancel" title="Click to Cancel" onclick="window.location = '/home/dashboard'"/>
                        &nbsp;&nbsp;<input type="submit" class="btn btn-default" value="Save" title="Click to Save"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </div>
}
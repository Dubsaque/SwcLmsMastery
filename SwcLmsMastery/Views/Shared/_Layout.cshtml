@using Microsoft.AspNet.Identity


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SWC LMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>



            <div class="navbar-collapse collapse">
                @{
                    @Html.AntiForgeryToken()
                    if (User.IsInRole("Administrator"))
                    {
                        <ul class="nav navbar-nav">
                            <li><a href="#"><span class="glyphicon glyphicon-wrench" style="font-family: helvetica, arial; color: red;"></span></a></li>
                            <li>
                                @Html.ActionLink("Hello, Administrator!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = "color:red;" })
                            </li>


                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                            <li>@Html.ActionLink("Account", "Index", "Manage")</li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin<span class="caret"></span></a>
                                <ul class="dropdown-menu" style="background: background: rgba(54,53,53,1);
background: -moz-linear-gradient(top, rgba(54,53,53,1) 0%, rgba(245,12,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(54,53,53,1)), color-stop(24%, rgba(245,12,12,1)), color-stop(50%, rgba(255,255,255,1)), color-stop(100%, rgba(255,255,255,1)));
background: -webkit-linear-gradient(top, rgba(54,53,53,1) 0%, rgba(245,12,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
background: -o-linear-gradient(top, rgba(54,53,53,1) 0%, rgba(245,12,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
background: -ms-linear-gradient(top, rgba(54,53,53,1) 0%, rgba(245,12,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
background: linear-gradient(to bottom, rgba(54,53,53,1) 0%, rgba(245,12,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#363535', endColorstr='#ffffff', GradientType=0 );">
                                    <li><a href="#" style="color: white; font-weight: bold; font-style: oblique;">Admin Tools:</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li>@Html.ActionLink("Unassigned Users", "Dashboard", "Home")</li>
                                    <li>@Html.ActionLink("User Search", "Dashboard", "Home")</li>
                                    <li>@Html.ActionLink("Full Dashboard", "Dashboard", "Home")</li>
                                </ul>
                            </li>
                        </ul>
                        //
                        <div>
                            @{ using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                             {
                                @Html.AntiForgeryToken()

                                <ul class="nav navbar-nav navbar-right">

                                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                </ul>
                             }
                            }
                        </div>
                        //==
                    }
                    else if (User.IsInRole("Teacher"))
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                            <li>@Html.ActionLink("Account", "Index", "Manage")</li>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="font-family: helvetica, arial; color: orangered;">Teacher<span class="caret"></span></a>
                                <ul class="dropdown-menu" style="background: background: rgba(54,53,53,1);
background: -moz-linear-gradient(top, rgba(54,53,53,1) 0%, rgba(245,133,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(54,53,53,1)), color-stop(24%, rgba(245,133,12,1)), color-stop(50%, rgba(255,255,255,1)), color-stop(100%, rgba(255,255,255,1)));
background: -webkit-linear-gradient(top, rgba(54,53,53,1) 0%, rgba(245,133,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
background: -o-linear-gradient(top, rgba(54,53,53,1) 0%, rgba(245,133,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
background: -ms-linear-gradient(top, rgba(54,53,53,1) 0%, rgba(245,133,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
background: linear-gradient(to bottom, rgba(54,53,53,1) 0%, rgba(245,133,12,1) 24%, rgba(255,255,255,1) 50%, rgba(255,255,255,1) 100%);
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#363535', endColorstr='#ffffff', GradientType=0 );">
                                    <li><a href="#" style="color: white; font-weight: bold; font-style: oblique;">Teacher Tools:</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li>@Html.ActionLink("My Classes", "Dashboard", "Home")</li>
                                    <li>@Html.ActionLink("Add New Class", "Dashboard", "Home")</li>
                                </ul>
                            </li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    }
                    else if (User.IsInRole("Student"))
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                            <li>@Html.ActionLink("Account", "Index", "Manage")</li>
                            <li><a href="#"><span class="glyphicon glyphicon-apple" style="font-family: helvetica, arial; color: yellow;">Student</span></a></li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    }
                    else if (User.IsInRole("Parent"))
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                            <li>@Html.ActionLink("Account", "Index", "Manage")</li>
                            <li><a href="#"><span class="glyphicon glyphicon-piggy-bank" style="font-family: helvetica, arial; color: yellowgreen;">Parent</span></a></li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    }
                    else
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                            <li>@Html.ActionLink("Account", "Index", "Manage")</li>

                        </ul>
                        @Html.Partial("_LoginPartial")
                    }
                }
            </div>



        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Our SWC LMS Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
}
<h4>Add Assignment</h4>
<div class="container table-bordered" style="border-color: black; border-style: solid; border-radius: 5px;">
    <br/>
    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Name", new {title = "Name", @class = "control-label"})<br/>
            @Html.TextBox("Name")
        </div>
        <div class="form-group">
            @Html.Label("Possible Points", new {title = "Possible Points", @class = "control-label"})<br/>
            @Html.TextBox("Points")
        </div>
        <div class="form-group">
            @Html.Label("Due Date", new {title = "Due Date ", @class = "control-label"})<br/>
            <input type="text" id="#datepicker" name="#datepicker">
        </div>
        <br/>
    </div>
    <div class="col-md-6">
        @Html.Label("Description", new {title = "Description", @class = "control-label"})<br/>
        @Html.TextArea("Description")
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#datepicker").datepicker({
        });
    });
</script>
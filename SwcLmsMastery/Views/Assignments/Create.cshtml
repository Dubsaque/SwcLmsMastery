@using SwcLmsMastery.Models.DBModels
@using SwcLmsMastery.Repositories
@model SwcLmsMastery.Models.DBModels.Assignment

@{

    ViewBag.Title = "Course Name";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
}

<h2>@ViewBag.Title
</h2>

<h4>Add Assignment</h4>
<script>
    $(function () {
        $("#datepicker").datepicker();
        
    }
    );
</script>

<div class="row container table-bordered col-md-6" style="border-radius: 5px; border-color: black; border-width: 2px;">
    <br />  @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="form-group hidden">
                @Html.LabelFor(model => model.CourseId, "CourseId", htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownList("CourseId", null, htmlAttributes: new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.CourseId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">@Html.Label("Name")<br/>
                    @Html.EditorFor(model => model.AssignmentName, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.AssignmentName, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Possible Points")<br/>
                    @Html.EditorFor(model => model.PossiblePoints, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.PossiblePoints, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Due Date")<br/>
                    @Html.EditorFor(model => model.DueDate, new {htmlAttributes = new {@class = "form-control", id = "datepicker"}})
                    @Html.ValidationMessageFor(model => model.DueDate, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Description")<br/>
                    @Html.TextAreaFor(model => model.AssignmentDescription, new {style = "height: 200px; width: 350px;", @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.AssignmentDescription, "", new {@class = "text-danger"})
                </div>
            </div>

        </div>
    <hr />
    <div class="form-group">
        <a href="@Url.Action("Dashboard", "Home")"><input type="cancel" value="Cancel" class="btn btn-default" /></a>
        <input type="submit" value="Create" class="btn btn-primary" />

    </div>
    }
    </div>
    

@using System.Collections
@using SwcLmsMastery.Models
@model SwcLmsMastery.Models.ApplicationUser


@{
    ViewBag.Title = "Awaiting Authorization";

}

<div class="col-lg-12">
    <div align="center">
        <h3>@ViewBag.Title</h3>
        <p>
            Your account must be approved by a system administrator.<br /><br />You will be notified when your account has been activated.<br /><br />
            Please click the log off button below.
        </p>

            @{ using (Html.BeginForm("LogOff", "Account", FormMethod.Post, htmlAttributes: new { id = "logoutForm", title = "LogOff" }))
             {
                @Html.AntiForgeryToken()
               
                    <a href="javascript:document.getElementById('logoutForm').submit()"><button type="button" class="btn btn-primary">Log Off</button></a>
                
             }
            }
        



    </div>
</div>
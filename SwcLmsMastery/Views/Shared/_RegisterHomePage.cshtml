
@using SwcLmsMastery.Models
@using SwcLmsMastery.Models.DBModels
@model SwcLmsMastery.Models.RegisterViewModel

<style>
    fieldset {
        border: 0;
    }

    label {
        display: block;
        margin: 30px 0 0 0;
    }

    select {
        width: 200px;
    }

    .overflow {
        height: 200px;
    }
</style>


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))

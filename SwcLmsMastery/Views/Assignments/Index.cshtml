}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssignmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PossiblePoints)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
